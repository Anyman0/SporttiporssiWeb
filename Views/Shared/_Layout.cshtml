@{
    var seriesList = ViewBag.SeriesList as List<string>;
    var sportList = ViewBag.SportList as List<string>;
}
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sporttiporssi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SporttiporssiWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Sporttiporssi</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li> *@
                    </ul>
                    <div class="d-flex align-items-center">
                        <!-- Sport Picker Dropdown -->
                        <form asp-controller="Series" asp-action="SetSport" method="post" class="form-inline ml-auto">
                            <select class="form-control" name="selectedSport" id="sportPicker" onchange="this.form.submit()">
                                @if (sportList != null)
                                {
                                    var selectedSport = HttpContextAccessor.HttpContext.Request.Cookies["sport"];//Context.Session.GetString("SelectedSport");
                                    @if (selectedSport != null)
                                    {
                                        <option value="">@selectedSport</option>
                                        sportList.Remove(selectedSport);
                                    }
                                    else
                                    {
                                        <option value="">Select Sport</option>
                                    }
                                    foreach (var sport in sportList)
                                    {
                                        var isSelected = sport == selectedSport ? "selected" : ""; // Determine if the option should be selected
                                        <option value="@sport">
                                            @sport
                                        </option>
                                    }
                                }
                            </select>
                        </form>
                        <!-- Series Picker Dropdown -->
                        <form asp-controller="Series" asp-action="SetSeries" method="post" class="form-inline ml-auto mx-3">
                            <select class="form-control" name="selectedSeries" id="seriesPicker" onchange="this.form.submit()">
                                @if (seriesList != null)
                                {
                                    var selectedSeries = HttpContextAccessor.HttpContext.Request.Cookies["serie"];//Context.Session.GetString("SelectedSeries");
                                    @if (selectedSeries != null)
                                    {
                                        <option value="">@selectedSeries</option>
                                        seriesList.Remove(selectedSeries);
                                    }
                                    else
                                    {
                                        <option value="">Select Series</option>
                                    }
                                    foreach (var series in seriesList)
                                    {
                                        var isSelected = series == selectedSeries ? "selected" : ""; // Determine if the option should be selected
                                        <option value="@series">
                                            @series
                                        </option>
                                    }
                                }
                            </select>
                        </form>
                        <ul class="navbar-nav ml-auto">
                            @if (HttpContextAccessor.HttpContext.Request.Cookies["auth_token"] != null)
                            {
                                <li class="nav-item">
                                    <span class="nav-link">
                                        Logged in as: @HttpContextAccessor.HttpContext.Request.Cookies["user"]
                                    </span>
                                </li>
                                <li class="nav-item">
                                    <a class="btn btn-primary" asp-area="" asp-controller="User" asp-action="Logout">Logout</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="btn btn-primary" asp-area="" asp-controller="User" asp-action="Index">Login</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SporttiporssiWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
